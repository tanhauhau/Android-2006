<resources>

    <!-- Base application theme. -->
    <style name="MedKitTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MedKitActionBar</item>
    </style>

    <style name="MedKitActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#fff</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="BlueButton">
        <item name="android:background">@drawable/button_holo</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">3dp</item>
    </style>



    <style name="boxed_small_text">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/grey</item>
    </style>
    <style name="boxed_medium_text">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="blue_text">
        <item name="android:textColor">#156cef</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="blue_title_big" parent="blue_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="blue_medium_text" parent="blue_text">
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>

    <style name="medium_text" parent="blue_medium_text">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
