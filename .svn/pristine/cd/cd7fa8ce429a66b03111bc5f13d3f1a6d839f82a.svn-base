<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/light_pink"
    tools:context="com.example.user.ce2006_project.particular_modifier">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/modifyEmailLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/bold_serif_title"
            android:text="Enter the fields to be changed"
            android:id="@+id/modifier_title"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/boxed_small_text"
            android:hint="Enter your new email address"
            android:id="@+id/modifyEmail"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
             />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/modifyContactLayout">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/boxed_small_text"
                android:hint="Enter your new contact number"
                android:id="@+id/modifyContact"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/modifyEmailLayout"
                android:layout_centerHorizontal="true" />



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/modifyCountryLayout">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/boxed_small_text"
                    android:hint="Enter the country"
                    android:id="@+id/modifyCountry"
                    android:layout_below="@+id/modifyContact"
                    android:layout_alignLeft="@+id/modifyContact"
                    android:layout_alignStart="@+id/modifyContact"
                    android:layout_marginTop="25dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/modifyCityLayout">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/boxed_small_text"
                        android:hint="Enter your city"
                        android:id="@+id/modifyCity"
                        android:layout_below="@+id/modifyCountry"
                        android:layout_alignLeft="@+id/modifyCountry"
                        android:layout_alignStart="@+id/modifyCountry"
                        android:layout_marginTop="25dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/modifyAddressLayout"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/boxed_small_text"
                            android:hint="Enter your address"
                            android:id="@+id/modifyAddress"
                            android:layout_below="@+id/modifyCity"
                            android:layout_alignLeft="@+id/modifyCity"
                            android:layout_alignStart="@+id/modifyCity"
                            android:layout_marginTop="25dp"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/modifyPostal_codeLayout">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/boxed_small_text"
                                android:hint="Enter your postal code"
                                android:id="@+id/modifyPostal_code"
                                android:layout_below="@+id/modifyAddress"
                                android:layout_alignLeft="@+id/modifyAddress"
                                android:layout_alignStart="@+id/modifyAddress"
                                android:layout_marginTop="25dp"/>

                        </LinearLayout>
                        <ImageButton
                            android:background="@drawable/home_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/home_Button"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="25dp"/>
                        <ImageButton
                            android:background="@drawable/info_icon"
                            android:layout_width="51dp"
                            android:layout_height="45dp"
                            android:id="@+id/info_Button"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="left"
                            android:layout_marginTop="-45dp" />

                        <Button

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="submit"
                            android:id="@+id/submit_Button"
                            android:layout_gravity="right"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="-49dp"/>



                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
