<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/blue_title_big"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Referred By" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/location"
                    style="@style/blue_medium_text"/>

                <Spinner
                    android:id="@+id/spinnerLocationFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/spinner_style"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/clinic_name"
                    style="@style/blue_medium_text"/>

                <Spinner
                    android:id="@+id/spinnerClinicFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/spinner_style"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/doctor_name"
                    style="@style/blue_medium_text"/>

                <Spinner
                    android:id="@+id/spinnerDoctorFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/spinner_style"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/blue_title_big"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Refer To"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/location"
                    style="@style/blue_medium_text"/>

                <Spinner
                    android:id="@+id/spinnerLocationTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/spinner_style"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/clinic_name"
                    style="@style/blue_medium_text" />

                <Spinner
                    android:id="@+id/spinnerClinicTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/doctor_name"
                    style="@style/blue_medium_text" />

                <Spinner
                    android:id="@+id/spinnerDoctorTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/spinner_style"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_enter_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/enter_date"
                    style="@style/blue_medium_text" />

                <Button
                    android:id="@+id/btnChooseDate"
                    style="@style/BlueButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Choose Date"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/enter_time"
                    style="@style/blue_medium_text" />

                <Spinner
                    android:id="@+id/spinnerTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    style="@style/spinner_style"/>

                <Button
                    android:id="@+id/btnSubmit"
                    style="@style/BlueButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Make Appointment" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />
</FrameLayout>