<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Clinic Details"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtClinicName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Clinic Name"
            android:inputType="textPersonName"
            android:textAppearance="@style/boxed_small_text" />

        <EditText
            android:id="@+id/txtClinicContact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Clinic Contact"
            android:inputType="text|phone"
            android:textAppearance="@style/boxed_small_text" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Location"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtClinicAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textAppearance="@style/boxed_small_text" />

        <EditText
            android:id="@+id/txtPostalCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Postal Code"
            android:inputType="textPostalAddress"
            android:textAppearance="@style/boxed_small_text" />

        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="City"
            android:textAppearance="@style/boxed_small_text" />

        <Spinner
            android:id="@+id/spinnerCountry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Country"
            android:entries="@array/countries"
            android:textAppearance="@style/boxed_small_text" />

        <Button
            android:id="@+id/btnSubmit"
            style="@style/BlueButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Save Clinic" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="invisible" />
</FrameLayout>